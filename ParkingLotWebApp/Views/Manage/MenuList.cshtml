@model IEnumerable<My.Core.Infrastructures.Implementations.Models.Menus>

@{
    ViewBag.Title = "選單列表";
}
@section pageheader{
    <h1 class="page-header">系統選單設定 <small>@ViewBag.Title</small></h1>
}
@section breadcrumb{
    <li><a href="@Url.Action("Index","Manage")">管理</a></li>
    <li class="active">@ViewBag.Title</li>
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                </div>
                <h4 class="panel-title">@ViewBag.Title</h4>
            </div>
            <div class="panel-toolbar">
                <div class="btn-group m-r-5" role="group" aria-label="First group">
                    <a href="@Url.Action("Index","Manage")" class="btn btn-white" title="@Common.BackToManage"><i class="glyphicon glyphicon-arrow-left"></i></a>
                </div>
                <div class="btn-group m-l-5" role="group" aria-label="First group">
                    <a href="@Url.Action("CreateMenu")" class="btn btn-white" title="新增選單"><i class="glyphicon glyphicon-plus"></i></a>
                </div>
            </div>
            <table class="table table-responsive table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IconCSS)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsExternalLinks)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ExternalURL)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Void)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreateUserId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastUpdateUserId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastUpdateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ParentMenu.Name)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IconCSS)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsExternalLinks)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExternalURL)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Void)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateUserId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastUpdateUserId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastUpdateTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ParentMenu.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>

            <div class="panel-body">
         
            </div>
        </div>
    </div>
</div>
