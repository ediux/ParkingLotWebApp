@model ParkingLotWebApp.Models.ParkingLotsFloor

@{
    ViewBag.Title = WebPages.ParkingLotFloors_Delete;
    bool HasReturn = (bool)(ViewBag.HasReturn ?? false);
}
@section pageheader{
    <h1 class="page-header">@WebPages.ParkingLotAreas <small>@ViewBag.Title</small></h1>
}
@section breadcrumb{
    <li><a href="@Url.Action("Index","Manage")">管理</a></li>
    <li><a href="@Url.Action("Index")">@WebPages.ParkingLotAreas_Index</a></li>
    @if (HasReturn)
    {
        <li><a href="@Url.Action("Index",new { id=Model.ParkingLotsID })">@string.Format(WebPages.ParkingLotFloors_Index_fromArea, Model.ParkingLotsDetail.Name)</a></li>
    }
    else
    {
        <li><a href="@Url.Action("Index")">@WebPages.ParkingLotFloors_Index</a></li>
    }
    <li class="active">@ViewBag.Title</li>
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                </div>
                <h4 class="panel-title">@ViewBag.Title</h4>
            </div>
            <div class="panel-toolbar">
                @if (HasReturn)
                {
                    <div class="btn-group" role="group" aria-label="First group">
                        <a href="@Url.Action("Index",new { id=Model.ParkingLotsID })" class="btn btn-white" title="@string.Format(Common.Back_To, string.Format(WebPages.ParkingLotFloors_Index_fromArea, Model.ParkingLotsDetail.Name))"><i class="glyphicon glyphicon-arrow-left"></i></a>
                    </div>
                }
                else
                {
                    <div class="btn-group" role="group" aria-label="First group">
                        <a href="@Url.Action("Index")" class="btn btn-white" title="@string.Format(Common.Back_To, WebPages.ParkingLotFloors_Index)"><i class="glyphicon glyphicon-arrow-left"></i></a>
                    </div>
                }
            </div>
            <div class="panel-body">
                <h3>@string.Format(Common.DeleteConfirmMessage, WebPages.ParkingLotFloors_This)</h3>
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.ParkingLotsDetail.Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ParkingLotsDetail.Name)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.FloorName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.FloorName)
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="panel-footer text-right">
                @using (Html.BeginForm(new { HasReturn = HasReturn }))
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" value="@Common.Delete" class="btn btn-danger" />
                }
            </div>
        </div>
    </div>
</div>
