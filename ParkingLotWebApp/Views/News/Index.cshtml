@model IEnumerable<ParkingLotWebApp.Models.News_Header>

@{
    ViewBag.Title = "Index";
}


<div class="row height-600">
    <div class="col-xs-12 col-md-4 left m-t-15">
        <div class="panel panel-default ">
            <div class="panel-heading">
                <h3 class="panel-title">
                    公告列表
                    @Ajax.ActionLink("+","Create",null,new AjaxOptions() { UpdateTargetId= "replacepageholder", HttpMethod="Get" },new { @class= "btn btn-xs btn-default pull-right" })
                </h3>
            </div>
            <div class="panel-body">
                <ul class="list-group">
                    @foreach (var item in Model)
                    {
                        <li class="list-group-item">
                            @Ajax.ActionLink(Html.DisplayFor(modelItem => item.Caption).ToString(), "Edit", new  { id=item.Id }, new AjaxOptions() { HttpMethod = "Get", UpdateTargetId = "replacepageholder" })
                            @Html.DisplayFor(modelItem => item.CreateUTCTime)
                        </li>                       
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-md-8 right" id="replacepageholder">

    </div>
</div>
<div class="clearfix"></div>
@section scripts{
    <script src="~/Scripts/ckeditor/ckeditor.js" type="text/javascript"></script>
    <script type="text/javascript">
        function ShowDetails(url) {
            $('#replacepageholder').empty();
            $('#replacepageholder').load(url);
        }
        function ShowCreateNewPost(url) {
            $('#replacepageholder').empty();
            $('#replacepageholder').load(url);
        }
        $(document).ready(function () {

        });
    </script>
}
