@model IEnumerable<ParkingLotWebApp.Models.CarPurposeTypes>

@{
    ViewBag.Title = Resources.WebPages.CarPurposeTypes_Index;
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink(Resources.WebPages.CarPurposeTypes_Create_New, "Create") @if (ViewBag.ReturnUrl != null)
    {
        @:| <a href="@ViewBag.ReturnUrl">@string.Format(Resources.Common.Back_To,Resources.WebPages.Cars_Edit)</a>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink(Resources.Common.Rename, "Edit", new { id = item.Id }) |                
                @Html.ActionLink(Resources.Common.Delete, "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
