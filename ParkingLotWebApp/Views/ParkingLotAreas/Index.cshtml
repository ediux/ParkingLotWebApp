@model IEnumerable<ParkingLotWebApp.Models.ParkingLotsDetail>

@{
    ViewBag.Title = Resources.WebPages.ParkingLotAreas_Index;
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink(Resources.WebPages.ParkingLotAreas_Create_New, "Create")
    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Period)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Charge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastUpdate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Period)
        </td>
        <td>
            @Html.ActionLink(Resources.WebPages.ParkingLotsDetail_Charge,"ShowCharge",new { id=item.ID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastUpdate)
        </td>
        <td>
            @Html.ActionLink(Resources.Common.Edit, "Edit", new { id=item.ID }) |
            @Html.ActionLink(Resources.Common.Details, "Details", new { id = item.ID }) |
            @Html.ActionLink(Resources.Common.Delete, "Delete", new { id=item.ID }) |
            @Html.ActionLink(Resources.WebPages.ParkingLotAreas_FloorsLink, "Index", "ParkingLotsFloor", new { id = item.ID, returnUrl = Url.Action("Index", "ParkingLotAreas", null) }, null)
        </td>
    </tr>
}

</table>
