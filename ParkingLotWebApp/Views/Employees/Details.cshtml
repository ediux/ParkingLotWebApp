@model ParkingLotWebApp.Models.Employee

@{
    ViewBag.Title = string.Format(WebPages.Employees_Details, Model.Name);
}
@section pageheader{
    <h1 class="page-header">@WebPages.Employees <small>@ViewBag.Title</small></h1>
}
@section breadcrumb{
    <li><a href="@Url.Action("Index","Manage")">管理</a></li>
    <li><a href="@Url.Action("Index")">@WebPages.Employees_Index</a></li>
    <li class="active">@ViewBag.Title</li>
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                </div>
                <h4 class="panel-title">@ViewBag.Title</h4>
            </div>
            <div class="panel-toolbar">
                <div class="btn-group m-r-5" role="group" aria-label="First group">
                    <a href="@Url.Action("Index")" class="btn btn-white" title="@string.Format(Common.Back_To, WebPages.Employees_Index)"><i class="glyphicon glyphicon-arrow-left"></i></a>
                </div>
                <div class="btn-group m-r-5" role="group" aria-label="Second group">
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-white" title="@Common.Edit"><i class="glyphicon glyphicon-edit"></i></a>
                </div>
            </div>
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Code)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Code)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.CreateUserId)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CreateUserId)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.CreateUTCTime)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CreateUTCTime)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.LastUserId)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.LastUserId)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.LastUpdateUTCTime)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.LastUpdateUTCTime)
                    </dd>

                </dl>
            </div>
        </div>
    </div>
</div>

