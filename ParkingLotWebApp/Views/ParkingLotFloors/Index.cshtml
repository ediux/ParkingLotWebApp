@model IEnumerable<ParkingLotWebApp.Models.ParkingLotFloors>

@{
    var areaname = ViewBag.AreaName as string;
    if (ViewBag.returnUrl != null)
    {
        ViewBag.Title = string.Format(Resources.WebPages.ParkingLotFloors_Index_fromArea, areaname);

    }
    else
    {
        ViewBag.Title = Resources.WebPages.ParkingLotFloors_Index;
    }
}
<h2>@ViewBag.Title</h2>

@{
    if (ViewBag.returnUrl != null)
    {
        <p>
            @Html.ActionLink(string.Format(Resources.WebPages.ParkingLotFloors_Create_FromArea,areaname), "Create", new { id = ViewBag.AreaId }) |
            @Html.ActionLink(string.Format(Resources.Common.Back_To, Resources.WebPages.ParkingLotAreas_Index), "Index", "ParkingLotAreas", null, null)
        </p>
    }
    else
    {
        <p>
            @Html.ActionLink(Resources.WebPages.ParkingLotFloors_Create_New, "Create")
        </p>
    }
}
<table class="table">
    <tr>
        @if (ViewBag.returnUrl == null)
        {
            <th>
                @Html.DisplayNameFor(model => model.ParkingLotAreas.Name)
            </th>
        }
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Void)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateUserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateUTCTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastUpdateUserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastUpdateUTCTime)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
            {
        <tr>
            @if (ViewBag.returnUrl == null)
            {
                <th>
                    @Html.DisplayFor(model => item.ParkingLotAreas.Name)
                </th>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Void)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateUserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateUTCTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdateUserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdateUTCTime)
            </td>

            <td>
                @Html.ActionLink(Resources.Common.Edit, "Edit", new { id = item.Id }) |
                @Html.ActionLink(Resources.Common.Delete, "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
